  "author": "Abdul Zahir",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/azee-rajput/origami-state-manager.git"
  },
  "bugs": {
    "url": "https://github.com/azee-rajput/origami-state-manager/issues"
