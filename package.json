    "testEnvironment": "jsdom",
    "testRegex": "(\\.(test|spec))\\.(ts|tsx)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ]
  },
  "scripts": {
    "build": "rollup -c --bundleConfigAsCjs",
