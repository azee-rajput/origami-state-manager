{
  "compilerOptions": {
    "rootDir": "src",
    "declaration": true,
    "declarationDir": "dist",
    "module": "esnext",
    "target": "es6",
    "lib": ["es6", "dom", "es2016", "es2017"],
    "sourceMap": true,
    "jsx": "react",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowUmdGlobalAccess": true,
    "baseUrl": "."
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "performance-test/src/otg/index.js",
    "performance-test/src/otg/useStateListener.js",
    "performance-test/src/otg/createStore.js",
    "src/createStore.test.tsx",
    "performance-test/src/stateValue.test.js"
  ],
  "exclude": [
    "node_modules",
    "build/*",
    "dist/*",
    "coverage/*",
    "*.js",
    "*.json",
    "__mocks__/*",
    "storybook-static/*",
    "src/**/*.stories.tsx"
  ]
}
